{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": ".",          // mudar para a raiz do projeto
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"],  // incluir a pasta prisma
  "exclude": ["node_modules", "src/tests/**/*.ts"]
}
